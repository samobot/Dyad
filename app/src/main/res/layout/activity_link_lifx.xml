<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_background">

    <ProgressBar
        android:id="@+id/loadingProgessBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:max="160"
        android:minWidth="300dp"
        android:minHeight="300dp"
        android:progress="0"
        android:progressDrawable="@drawable/circle_progess_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/lifxSearchingForLightsText"
        app:layout_constraintBottom_toTopOf="@+id/loadingProgessBar"
        app:layout_constraintEnd_toEndOf="@+id/loadingProgessBar"
        app:layout_constraintStart_toStartOf="@+id/loadingProgessBar" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/lifxPleaseWair40SecondsText"
        app:layout_constraintEnd_toEndOf="@+id/loadingProgessBar"
        app:layout_constraintStart_toStartOf="@+id/loadingProgessBar"
        app:layout_constraintTop_toBottomOf="@+id/loadingProgessBar" />

    <TextView
        android:id="@+id/discoveredLightsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/loadingProgessBar"
        app:layout_constraintEnd_toEndOf="@+id/loadingProgessBar"
        app:layout_constraintStart_toStartOf="@+id/loadingProgessBar"
        app:layout_constraintTop_toTopOf="@+id/loadingProgessBar" />
</androidx.constraintlayout.widget.ConstraintLayout>